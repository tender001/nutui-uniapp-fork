{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@packages/*": ["./src/packages/*"]
    },
    "types": [
      "@dcloudio/types",
      "@uni-helper/uni-app-types",
      "nutui-uniapp/global.d.ts"
    ],
    "sourceMap": true
  },
  "include": [
    "node_modules/nutui-uniapp/global.d.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/pages/demo/business/category/data.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/utils/touchEmulator.js"
  ],
  "vueCompilerOptions": {
    "nativeTags": [
      "block",
      "component",
      "template",
      "slot"
    ]
  }
}
